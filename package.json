{
  "name": "lockin-root",
  "private": true,
  "scripts": {
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:backend": "npm --prefix backend run dev",
    "dev:electron": "wait-on http://localhost:5173 && electron electron/main.cjs",
    "dev:desktop": "concurrently -k \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev": "concurrently -k \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^31.0.0",
    "wait-on": "^7.2.0"
  }
}
